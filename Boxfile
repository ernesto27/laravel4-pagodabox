global:
  env:
    - LARAVEL_ENV: production
web1:
  name: laravel-pagoda
  shared_writable_dirs:
    - app//storage/cache
    - app//storage/database
    - app//storage/logs
    - app//storage/sessions
    - app//storage/views
    - app//storage/work
  document_root: /public
  php_version: 5.3.8
  php_extensions:
    - pdo_mysql
    - mysqli 
    - mysql
    - mcrypt
    - eaccelerator
    - memcached
    - gd 
  before_deploy:
    - "php artisan migrate:install"
    - "php artisan migrate"
  after_deploy:
    - "rm -f app/storage/cache/*"
    - "rm -f app/storage/views/*"
